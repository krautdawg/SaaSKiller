# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/saaskiller

# Server Configuration
PORT=3000
NODE_ENV=development

# External APIs
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Redis Configuration (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_ENABLE_OFFLINE_QUEUE=true

# SMTP Configuration (for email sending)
SMTP_HOST=mail.hosting.de
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_NAME=SaaSKiller
SMTP_FROM_EMAIL=your_email@example.com
SMTP_PROVIDER_EMAIL=your_provider_email@example.com

# Queue Configuration
QUEUE_NAME=email-reports
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=2000
QUEUE_JOB_TIMEOUT=120000
QUEUE_STALLED_INTERVAL=30000
QUEUE_MAX_STALLED=2
QUEUE_COMPLETE_AGE=86400
QUEUE_COMPLETE_COUNT=1000
QUEUE_FAIL_AGE=604800

# PDF Configuration
PDF_STORAGE_PATH=./temp/pdfs
PDF_MAX_SIZE_MB=10
